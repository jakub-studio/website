{
	// Built in VSC stuff
	"files.eol": "\n",
	"typescript.tsdk": "./node_modules/typescript/lib",
	
	// Markdoc extension (See extensions.json -> mohitsingh.markdoc)
	"[markdoc]": {
        "editor.autoClosingBrackets": "always"
	},
	"files.associations": {
		"tailwind.css": "tailwind.css" 
	},

	// Code Spell checker (streetsidesoftware.code-spell-checker) dictionary 
	"cSpell.language": "en-GB",
	"cSpell.words": [
		"Frontmatter",
		"Jakub",
		"Markdoc",
		"postbuild",
		"renderable",
		"Staniszewski",
		"tailwindcss",
		"vars",

		// Software vendors and names
		"maxon",
		"indesign",
		"lightroom",
		"figjam"
	],
}